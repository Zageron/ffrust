{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": false,
    "lib": [
      "dom",
      "es6"
    ],
    "module": "es6",
    "moduleResolution": "node",
    "noEmit": false,
    "noImplicitAny": false,
    "outDir": "./dist",
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": true,
    "target": "es6",
  },
  "include": [
    "src/*",
  ],
  "exclude": [
      "node_modules"
  ]
}
